rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {

// "products" collection ki rules
// Evaraina login ayithe (Anonymous tho saha) data chudachu, add cheyachu
match /products/{product} {
  allow read: if request.auth != null;
  allow write: if request.auth != null && request.resource.data.name != null && request.resource.data.price != null;
}

// Default rule: Migatha vaatiki access block cheyandi
match /{document=**} {
  allow read, write: if false;
}


}
}